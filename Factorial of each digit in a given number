#include <stdio.h>
int factorial(int n) {
    int fact = 1;
    for (int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

int main() {
    int num, digit;

    printf("Enter a number: ");
    scanf("%d", &num);
    if (num < 0) {
        num = -num;
    }

    printf("Factorial of each digit:\n");
    if (num == 0) {
        printf("Digit: 0 -> Factorial: 1\n");
    } else {
        while (num > 0) {
            digit = num % 10;   
            printf("Digit: %d -> Factorial: %d\n", digit, factorial(digit));
            num = num / 10;    
        }
    }
    printf("Prudvi Taraka venkata siva ");

    return 0;
}
