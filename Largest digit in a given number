#include <stdio.h>

int main() {
    int num, digit;
    int largest = 0;
    printf("enter a number:");
    scanf("%d", &num);
    if (num < 0) {
        num = -num;
    }
    while (num > 0) {
        digit = num % 10;
        if (digit > largest) {
            largest = digit;   
        }
        num = num / 10;
    }

    printf("The largest digit is: %d\n", largest);
printf("Prudvi Taraka venkata siva ");
    return 0;
}
